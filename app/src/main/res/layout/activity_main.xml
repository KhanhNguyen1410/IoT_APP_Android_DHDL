<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="16dp"
    android:paddingRight="30dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="96dp"
                android:layout_height="101dp"
                android:onClick="imgLight1"
                android:src="@drawable/lightoff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng 1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="94dp"
                android:layout_height="93dp"
                android:onClick="imgLight2"
                android:src="@drawable/lightoff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng 2" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e1c6a1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="95dp"
                android:layout_height="97dp"
                android:onClick="imgLight3"
                android:src="@drawable/lightoff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng  3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:onClick="imgLight4"
                android:src="@drawable/lightoff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng 4" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:layout_width="387dp"
        android:layout_height="11dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái đèn: "
        android:textColor="#FF9800"
        tools:text="Trạng thái đèn: " />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:text="loading.." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="Nhiệt độ:"
        android:textColor="#FF5722"
        tools:text="Nhiệt độ:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:text="loading..."
        android:textColor="#3F51B5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="Độ ẩm:"
        android:textColor="#FF5722"
        tools:text="Độ ẩm:" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:text="loading.."
        android:textColor="#03A9F4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Nguyễn Đức Khánh -- Nguyễn Văn Đạt"
        android:textColor="#3F51B5" />


</LinearLayout>